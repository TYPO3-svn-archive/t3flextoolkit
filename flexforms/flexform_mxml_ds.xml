<T3DataStructure>
	<meta>
	</meta>
	<sheets>
	<sDEF>
	<ROOT>
		<TCEforms>
			<sheetTitle>mxml code</sheetTitle>
			<description>Select the HTML element on the page which you want to be the overall container element for the template.</description>
		</TCEforms>
		<type>array</type>
		<el>	
			

			<templatefiles>

				<TCEforms>

					<label>templates selection</label>

					<config>

						<type>select</type>

						<items type="array">													

						</items>

						<fileFolder>fileadmin/flexFiles/templates/</fileFolder>

						<fileFolder_extList>mxml</fileFolder_extList>

						<fileFolder_recursions >0</fileFolder_recursions>							

							<minitems>0</minitems>

							<maxitems>1</maxitems>			

					

								<wizards type="array">

							<uproc>

								<type>userFunc</type>

								<userFunc>user_codeEditor->user_button</userFunc>													

								<params>

									<wrapTag>u</wrapTag>

								</params>	

							</uproc>

			 </wizards> 

			 </config>

				</TCEforms>

			</templatefiles>	

			

		

			

			

			

				<editor>				

				<TCEforms>

				<label>MXML</label>				

					<config>

						<type>text</type>

						<cols>100</cols>

						<rows>10</rows>						

						<eval>trim</eval>

									 

				 		<wizards type="array">

							<uproc>

								<type>userFunc</type>

								<userFunc>user_codeEditor->user_TCAform_procWizard</userFunc>													

								<params>

									<codeLang>html</codeLang>
									<langExt>mxml</langExt>

								</params>	

							</uproc>

			 </wizards>

							  

				</config>				

				</TCEforms>

			</editor>	
		
		<saveastemplate>
			<TCEforms>
			<label>save as template [no file extension...just name]</label>
			<config>
					<type>input</type>
			<eval>trim</eval>
			<size>20</size>
			</config>
			</TCEforms>
		</saveastemplate>		
			
		</el>
	</ROOT>
	</sDEF>
	<sDEF2>
	<ROOT>
		<TCEforms>
			<sheetTitle>class metadata</sheetTitle>
		</TCEforms>
		<type>array</type>
		<el>
		<comments>
			<TCEforms>
			<label>description</label>
			<config>
					<type>text</type>
					<cols>48</cols>
					<rows>10</rows>
			<eval>trim</eval>
			<size>20</size>
			</config>
			</TCEforms>
		</comments>
		</el>
	</ROOT>
	</sDEF2>
</sheets>
</T3DataStructure>